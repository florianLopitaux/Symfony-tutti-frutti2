{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/components/header_style.css") }}">
{% endblock %}

<header>
    <img src="{{ asset('img/logo.png') }}" alt="Logo Tutti frutti"/>

    <div id="btn-container">
        {% if page == "search" %}
            <a class="green-button" href="{{ path('app_favorite') }}">My Profile</a>
        {% else %}
            <a class="green-button" href="{{ path('app_search') }}">Search music</a>
        {% endif %}

        <a class="green-button" href="{{ path('app_logout') }}">Log out</a>
    </div>
</header>
