{% extends 'base.html.twig' %}

{% block title %}Tutti Frutti - Search{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/pages/search_page_style.css") }}">
{% endblock %}

{% block body %}
    {% include 'components/header.html.twig' %}

    <main>
        <form method="POST">
            <input name="fruit_search" class="search-element" placeholder="Search...">
        </form>

        <section id="search-result-container">
            {% if (releases is defined) %}
                {% for current in releases %}
                    {% include 'components/release.html.twig' with {'release': current, 'fruit': fruit} %}
                {% endfor %}
            {% endif %}
        </section>
    </main>
{% endblock %}
